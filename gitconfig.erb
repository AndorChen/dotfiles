[user]
  name = <%= print("Your Name:"); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email:"); STDOUT.flush; STDIN.gets.chomp %>
[github]
  user = <%= print("Github Username:"); STDOUT.flush; STDIN.gets.chomp %>
  token = <%= print("Github API Token:"); STDOUT.flush; STDIN.gets.chomp %>
[apply]
	whitespace = fix
[core]
	excludesfile = ~/.gitignore_global
	attributesfile = ~/.gitattributes
	whitespace = fix,space-before-tab,tab-in-indent,trailing-space
  autocrlf = false
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[merge]
	log = true
